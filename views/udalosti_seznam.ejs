        <!-- seznam událostí -->
        <section id="udalosti">
            <!-- <h2 class="nadpis">- <%= (category_title).toUpperCase() %> -</h2> -->

            <% if (trips.length == 0) { %> <% } else if (category_title == "Vyhledávání") { %>
            <p>Počet nalezených výletů: <%= trips.length %>.</p>
            <% } else if (trips.length == 1) { %>
            <p>Nalezen 1 výlet v kategorii <%= (category_title).toLowerCase() %>.</p>
            <% } else if (trips.length == 1 || trips.length == 2 || trips.length == 3 || trips.length == 4) { %>
            <p>Nalezeny <%= trips.length %> výlety v kategorii <%= (category_title).toLowerCase() %>.</p>
            <% } else{ %>
            <p>Nalezeno <%= trips.length %> výletů v kategorii <%= (category_title).toLowerCase() %>.</p>
            <% } %> <% if (trips.length == 0) { %>
            <h2 id="error">Nic nenalezeno :(</h2>
            <% } else{ %> <% for (let element = 0; element < trips.length; element++) { %> <% if (element %2 == 0 || element == 0) { %>

            <div class="card mb-3 udalost_center" data-aos="fade-right" data-aos-duration="2000" data-aos-delay="650" data-aos-offset="100">
                <a class="aTag" href="/<%= url %>/<%= trips[element].url %>">
                    <div class="row no-gutters">
                        <div class="col-md-4 imgCenter">
                            <img
                                src="/images/<%= trips[element].url %>/<%= trips[element].images[0] %>"
                                class="card-img errorimage1"
                                loading="lazy"
                                alt="obrazek"
                                onerror="this.src='images/nofoto.jpg'"
                            />
                            <img
                                src="/images/<%= trips[element].url %>/<%= trips[element].images[0] %>"
                                class="card-img errorimage2"
                                loading="lazy"
                                alt="obrazek"
                                onerror="this.src='images/nofotoorig.jpg'"
                            />
                            <div class="textCentered"><h3><%= trips[element].title %></h3></div>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title"><%= (trips[element].title).toUpperCase() %></h3>
                                <br />
                                <p class="card-text"><%= trips[element].description %></p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
            <hr class="line" />

            <% } else { %>
            <div class="card mb-3 udalost_center" data-aos="fade-left" data-aos-duration="2000" data-aos-delay="650" data-aos-offset="100">
                <a class="aTag" href="/<%= url %>/<%= trips[element].url %>">
                    <div class="row no-gutters">
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title"><%= (trips[element].title).toUpperCase() %></h3>
                                <br />
                                <p class="card-text"><%= trips[element].description %></p>
                            </div>
                        </div>
                        <div class="col-md-4 imgCenter">
                            <img
                                src="/images/<%= trips[element].url %>/<%= trips[element].images[0] %>"
                                class="card-img errorimage1"
                                loading="lazy"
                                alt="obrazek"
                                onerror="this.src='images/nofoto.jpg'"
                            />
                            <img
                                src="/images/<%= trips[element].url %>/<%= trips[element].images[0] %>"
                                class="card-img errorimage2"
                                loading="lazy"
                                alt="obrazek"
                                onerror="this.src='images/nofotoorig.jpg'"
                            />
                            <div class="textCentered"><h3><%= trips[element].title %></h3></div>
                        </div>
                    </div>
                </a>
            </div>
            <hr class="line" />
            <% } %> <% } %> <% } %>
